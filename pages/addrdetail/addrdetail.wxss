.view-addr-item {
  width: 95%;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 2rpx 0;
  background-color: white;
}
.view-addr-item-detail {
  width: 95%;
  padding: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 2rpx 0;
  background-color: white;
}
.view-addr-item-default {
  width: 95%;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  align-self: center;
  margin: 10rpx 0;
  background-color: white;
}
.view-addr-item-default-value {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}
.view-addr-item-title {
  margin-right: 20rpx;
}
.view-addr-detail {
  width: 100%;
  height: 200rpx;
}
.view-addr-item-value {
  width: 80%;
}
.view-addr-save {
  width:95%;
  padding: 20rpx;
  text-align: center;
}
.view-addr-save-button {
  width: 80%;
}