.view-evaluation {
  width: 95%;
  padding: 20rpx;
  background-color: #fff;
  margin: 10rpx 0;
}
.view-eva-product {
  
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.view-product-img {
  height: 170rpx;
  width: 200rpx;
  margin-right: 20rpx;
}
.view-eva-product-price {
  padding: 10rpx 0;
}

.view-eva-type {
  margin-top: 20rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
}
.view-eva-type-item {
  display: flex;
  align-items: flex-start;
}
.view-eva-type-item-title {
  margin-left: 10rpx;
}
.view-eva-comments {
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
}
.view-eva-comments-text {
  width: 100%;
  height: 100rpx;
  border: solid 1rpx #eee;
  border-radius: 10rpx;
  padding: 10rpx;
}
.view-eva-comments-img-button {
  width: 20%;
  height: 120rpx;
  padding: 0 0rpx;
  margin-left: 20rpx;
  border: solid 1rpx #eee;
  border-radius: 10rpx;
}
.view-eva-comments-imgs{
  margin-top: 0rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  align-content: flex-start;
  flex-wrap:wrap;
}

.view-eva-comments-imgs-item {
  width: 220rpx;
  height: 200rpx;
  margin-top: 30rpx;
  margin-right: 15rpx;
}
.view-eva-comments-img {
  width: 100%;
  height: 100%;
  border: solid 1rpx #eee;
}

.view-eva-comments-img-del-view {
  width: 100%;
  height: 50rpx;
  position: relative;
  z-index: 9;
  bottom: 55rpx;
  left: 0;
  text-align: center;
  background-color: #aaa;
  opacity: 0.65;
  border: solid 1rpx #eee;
}
.view-eva-comments-img-del-img {
  height: 50rpx;
  width: 50rpx;
  opacity: 1;
}

.view-cover-view {
  width: 100%;
  height: 100%;
  background-color: #aaa;
  opacity: 0.5;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}
.view-comments-img-swiper-view {
  position: fixed;
  top: 20%;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 101;
  text-align: center;
  margin: auto;
}
.view-comments-img-swiper {
  width: 90%;
  height: 60%;
  text-align: center;
  margin: auto;
}
.view-comments-img-swiper-img {
  width: 100%;
  height: 100%;
}
.class-hide {
  display: none;
}

.view-eva-shop {
  background-color: #fff;
  margin: 10rpx 0;
  margin-bottom: 110rpx;
}
.view-eva-shop-title {
  width: 95%;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.view-eva-shop-item {
  width: 95%;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.view-eva-shop-item-star {
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx;
}

.view-eva-submit {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  z-index: 10;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  align-content: center;
  align-self: center;
  background-color: #f8f8f8;
}
.view-eva-submit-noname {
  width: 70%;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  align-content: center;
  align-self: center;
}
.view-eva-submit-noname-title {
  margin-left: 10rpx;
}
.view-eva-submit-noname-icon {
  margin-left: 20rpx;
}
.view-eva-submit-button {
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  vertical-align: middle;
  color: white;
  background-color: #FD6D17;
}