.view-edit {
  width: 95%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx;
  margin: 5rpx 0;
}
.view-edit-title {
  height: 100%;
  display: inline-block;
}
.view-edit-button {
  float: right;
  height: 100%;
  color: #F28127;
}
.view-cart-products {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 90rpx;
}
.view-cart-products-scroll {
  width: 100%;
  height: 100%;
}

.view-cart-select {
  height: 260rpx;
  width: 40rpx;
  padding: 0 20rpx;
  line-height: 260rpx;
}
.view-cart-product-img {
  width: 230rpx;
  height: 220rpx;
  padding: 20rpx 0;
}
.view-cart-product-detail {
  width: 60%;
  margin-left: 0rpx;
  padding: 20rpx
}
.view-cart-product-detail-name {
  max-height: 70rpx;
  overflow: hidden;
  width: 90%;
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
  word-wrap: break-word;
}
.view-cart-product-detail-sku {
  padding: 10rpx 0;
}
.view-cart-product-detail-pricenumbers {
  padding: 10rpx 0;
}
.view-cart-product-detail-price {
  color: red;
}
.view-cart-product-detail-price-number {
  font-size: 40rpx;
}
.view-cart-product-detail-numbers {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}
.view-cart-product-detail-numbers-dec {
  border: solid 1rpx #eee;
  width: 50rpx;
  display: inline-block;
  text-align: center;
  font-size: 35rpx;
  height: 100%;
  padding: 0 20rpx;
}
.view-cart-product-detail-numbers-inc {
  border: solid 1rpx #eee;
  width: 50rpx;
  display: inline-block;
  text-align: center;
  font-size: 35rpx;
  height: 100%;
  padding: 0 20rpx;
}
.view-cart-product-detail-number {
  border: solid 1rpx #eee;
  width: 100rpx;
  display: inline-block;
  text-align: center;
  font-size: 35rpx;
  height: 100%;
  padding: 0 20rpx;
}
.view-cart-bottom {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  position: fixed;
  z-index: 100;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  align-self: center;
  font-size: 30rpx;
}
.view-cart-bottom-selectall {
  width: 20%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-self: center;
}
.view-cart-bottom-selectall-icon {
  height: 65%;
  display: inline-block;
}
.view-cart-bottom-selectall-text {
  height: 100%;
  margin-left: 10rpx;
}
.view-cart-bottom-total {
  width: 55%;
  text-align: center;
  color: red;
}
.view-cart-bottom-buy {
  background-color: #ccc;
  text-align: center;
  color: #fff;
  width: 25%;
  font-size: 35rpx;
}
.view-cart-bottom-total-number {
  font-size: 40rpx;
}
.buy-enabled {
  background-color: red;
}
.edit-enabled {
  background-color: red;
}
.view-cart-empty-tips {
  width: 100%;
  height: 98%;
  display: flex;
  align-items: center;
  justify-content: center;
  align-self: center;
  text-align: center;
  margin: auto;
  vertical-align: middle;
}

.view-cart-product {
  width: 100%;
  height: 260rpx;
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: red;
}
.view-cart-product-movable-area {
  height: 100%;
  flex: 1;
  background-color: #ddd;
}
.view-cart-product-movable-view {
  width: 130%;
  padding: 0rpx;
  height: 100%;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
  margin: 0rpx 0;
  background-color: #fff;
}
.move-able-delete-section {
  width: 70px;
  height: 260rpx;
  line-height: 260rpx;
  text-align: center;
  color: #fff;
}